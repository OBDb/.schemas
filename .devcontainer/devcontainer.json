{
    "name": "Python Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "task.quickOpen.skip": false
            }
        }
    },

    "postCreateCommand": "pip install pytest",

    "remoteUser": "vscode"
}